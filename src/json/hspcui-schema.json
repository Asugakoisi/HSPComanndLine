{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "required": [
    "options",
    "lang",
    "ver"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "ver": {
      "$id": "#/properties/ver",
      "type": "string",
      "title": "The ver schema",
      "description": "このファイルが対応する hspcui の バージョン",
      "default": "0.1.0",
      "pattern": "^([0-9]+).([0-9]+).([0-9]+).([0-9]+)-([0-9]+).([0-9]+).([0-9]+).([0-9]+)$",
      "examples": [
        "0.1.0"
      ]
    },
    "lang": {
      "$id": "#/properties/lang",
      "type": "string",
      "title": "The lang schema",
      "description": "このファイルが適用される時の言語",
      "default": "ja",
      "minLength": 2,
      "pattern": "^[a-z]{2,}$"
    },
    "options": {
      "$id": "#/properties/options",
      "type": "array",
      "title": "The options schema",
      "description": "An explanation about the purpose of this instance.",
      "default": [],
      "additionalItems": false,
      "items": {
        "$id": "#/properties/options/items",
        "anyOf": [
          {
            "$id": "#/properties/options/items/anyOf/0",
            "type": "object",
            "title": "The first anyOf schema",
            "description": "An explanation about the purpose of this instance.",
            "default": {},
            "required": [
              "id",
              "name",
              "desctription",
              "example",
              "note",
              "linux"
            ],
            "properties": {
              "id": {
                "$id": "#/properties/options/items/anyOf/0/properties/id",
                "type": "integer",
                "title": "The id schema",
                "description": "オプションの ID",
                "default": 100,
                "minimum": 0
              },
              "name": {
                "$id": "#/properties/options/items/anyOf/0/properties/name",
                "type": "string",
                "title": "The name schema",
                "description": "オプション名",
                "default": "",
                "minLength": 1,
                "pattern": "^((a|c|C|d|D|E|i|j|m|p|P|r|r0|s|u|w|o|h|online|temp|tempd|template|help|profile|version|license|see|notasminfo|nologo|oldcmpmes)|((outname|syspath|compath|rtmpath|temp|tempd|tempa|tempo|lang|profile|profilea|profiled|r|platform|refname|tmppath)=))$"
              },
              "desctription": {
                "$id": "#/properties/options/items/anyOf/0/properties/desctription",
                "type": "string",
                "title": "The desctription schema",
                "description": "オプションの説明。これはテキストファイルで切り出して、それを参照するようにもできます。",
                "default": "",
                "minLength": 1
              },
              "example": {
                "$id": "#/properties/options/items/anyOf/0/properties/example",
                "type": "string",
                "title": "The example schema",
                "description": "オプションの使用例。ないときは空文字で。",
                "default": ""
              },
              "note": {
                "$id": "#/properties/options/items/anyOf/0/properties/note",
                "type": "string",
                "title": "The note schema",
                "description": "オプションの注意点。ないときは空文字で。",
                "default": ""
              },
              "linux": {
                "$id": "#/properties/options/items/anyOf/0/properties/linux",
                "type": "boolean",
                "title": "The env schema",
                "description": "このオプションが使えるOS",
                "default": true
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "additionalProperties": false
}
